@page "/"
@using MudBlazor

<PageTitle>Home - Vasis MDFe Web</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">
        🚛 Bem-vindo ao Vasis MDFe Web
    </MudText>

    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-8">
        Sistema completo para gestão de Manifesto Eletrônico de Documentos Fiscais
    </MudText>

    <MudGrid>
        <!-- Card MDFe -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Description" Size="Size.Large" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Class="mt-2">MDFe</MudText>
                        <MudText Typo="Typo.body2">
                            Criar, validar, assinar e transmitir manifestos eletrônicos
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/mdfe/criar">
                        Começar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Card Eventos -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Event" Size="Size.Large" Color="Color.Secondary" />
                        <MudText Typo="Typo.h6" Class="mt-2">Eventos</MudText>
                        <MudText Typo="Typo.body2">
                            Gerenciar eventos do MDFe como encerramento e cancelamento
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/evento/encerrar">
                        Acessar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Card Configurações -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Settings" Size="Size.Large" Color="Color.Tertiary" />
                        <MudText Typo="Typo.h6" Class="mt-2">Configurações</MudText>
                        <MudText Typo="Typo.body2">
                            Configurar certificados, web services e parâmetros do sistema
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Tertiary" Href="/config/geral">
                        Configurar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Card Relatórios -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Assessment" Size="Size.Large" Color="Color.Info" />
                        <MudText Typo="Typo.h6" Class="mt-2">Relatórios</MudText>
                        <MudText Typo="Typo.body2">
                            Visualizar relatórios de MDFe e eventos processados
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Info" Href="/relatorio/mdfe">
                        Ver Relatórios
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Card Ferramentas -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Build" Size="Size.Large" Color="Color.Warning" />
                        <MudText Typo="Typo.h6" Class="mt-2">Ferramentas</MudText>
                        <MudText Typo="Typo.body2">
                            Visualizador XML, teste de conexão e logs do sistema
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Warning" Href="/ferramenta/xml-viewer">
                        Ferramentas
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Card Teste -->
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <div style="text-align: center;">
                        <MudIcon Icon="Icons.Material.Filled.Science" Size="Size.Large" Color="Color.Success" />
                        <MudText Typo="Typo.h6" Class="mt-2">Teste Integração</MudText>
                        <MudText Typo="Typo.body2">
                            Testar conectividade e integração com a API
                        </MudText>
                    </div>
                </MudCardContent>
                <MudCardActions Class="justify-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Success" Href="/teste/integracao">
                        Testar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Informações do Sistema -->
    <MudPaper Class="pa-4 mt-8" Elevation="1">
        <MudText Typo="Typo.h6" GutterBottom="true">📊 Status do Sistema</MudText>
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudText><strong>Versão:</strong> 1.0.0</MudText>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudText><strong>Framework:</strong> .NET 8</MudText>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudText><strong>UI:</strong> MudBlazor</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>