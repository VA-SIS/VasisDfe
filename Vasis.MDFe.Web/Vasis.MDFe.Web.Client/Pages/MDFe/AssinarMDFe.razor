@page "/mdfe/assinar"
@inject MDFeService MDFeService
@inject ISnackbar Snackbar

<PageTitle>Assinar MDFe</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h4" Class="mb-4">🔐 Assinar MDFe</MudText>

    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">XML do Manifesto para Assinatura</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField @bind-Value="xmlMDFe"
                          Label="XML do MDFe"
                          Variant="Variant.Outlined"
                          Lines="15"
                          FullWidth="true"
                          Placeholder="Cole aqui o XML do MDFe para assinatura digital..."
                          HelperText="Insira o XML do MDFe que será assinado digitalmente" />
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       OnClick="ExecutarAssinatura"
                       Disabled="@(loading || string.IsNullOrWhiteSpace(xmlMDFe))"
                       StartIcon="Icons.Material.Filled.Security">
                @if (loading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                    <span class="ml-2">Assinando...</span>
                }
                else
                {
                    <span>Assinar MDFe</span>
                }
            </MudButton>
            <MudButton Variant="Variant.Text"
                       Color="Color.Secondary"
                       OnClick="LimparXML"
                       StartIcon="Icons.Material.Filled.Clear">
                Limpar
            </MudButton>
        </MudCardActions>
    </MudCard>

    @if (!string.IsNullOrEmpty(resultado))
    {
        <MudCard Class="mt-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">🔐 XML Assinado</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudAlert Severity="@alertSeverity" Class="mb-3">
                    @alertMessage
                </MudAlert>
                <MudTextField Value="@resultado"
                              Label="XML Assinado"
                              Variant="Variant.Outlined"
                              Lines="10"
                              ReadOnly="true" />
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           OnClick="CopiarResultado"
                           StartIcon="Icons.Material.Filled.ContentCopy">
                    Copiar XML
                </MudButton>
            </MudCardActions>
        </MudCard>
    }
</MudContainer>

@code {
    private string xmlMDFe = "";
    private string resultado = "";
    private string alertMessage = "";
    private Severity alertSeverity = Severity.Info;
    private bool loading = false;

    private async Task ExecutarAssinatura()
    {
        try
        {
            loading = true;
            resultado = await MDFeService.AssinarMDFeAsync(xmlMDFe);

            if (!string.IsNullOrEmpty(resultado))
            {
                alertMessage = "✅ MDFe assinado digitalmente com sucesso!";
                alertSeverity = Severity.Success;
                Snackbar.Add("Assinatura digital realizada com sucesso!", Severity.Success);
            }
            else
            {
                alertMessage = "⚠️ Não foi possível assinar o MDFe.";
                alertSeverity = Severity.Warning;
                Snackbar.Add("Falha na assinatura digital!", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            alertMessage = $"❌ Erro durante a assinatura: {ex.Message}";
            alertSeverity = Severity.Error;
            resultado = $"Erro: {ex.Message}";
            Snackbar.Add($"Erro: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void LimparXML()
    {
        xmlMDFe = "";
        resultado = "";
        alertMessage = "";
    }

    private async Task CopiarResultado()
    {
        await Task.Run(() =>
        {
            Snackbar.Add("XML copiado para a área de transferência!", Severity.Info);
        });
    }
}